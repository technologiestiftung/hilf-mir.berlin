{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "esnext",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@common/*": [
        "./src/common/*"
      ]
    },
    "moduleResolution": "node",
    "incremental": true,
  },
  "include": [
    "next-env.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./scripts/createFakeGristData.ts",
    "./middleware.ts",
    "docs/**/*.*",
  ],
  "exclude": [
    "node_modules",
    "*.setup.js",
    ".eslintrc.js",
    ".importjs.js",
    "*.config.js",
    ".prettierrc.js",
    "i18n.js"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "es2019",
      "lib": [
        "es2019"
      ],
      "module": "Node16",
    }
  }
}